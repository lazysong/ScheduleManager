<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main1"
    tools:context="${relativePackage}.${activityClass}" >
    
    <LinearLayout 
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_top_main">
        
        <Button 
            android:id="@+id/button_more_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_more"/>
        
        <TextView 
            android:id="@+id/textview1_main"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="幸福来自点滴进步"
            android:textColor="@android:color/white"
            android:textSize="16dip"/>
        

        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/linearlayout2"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout1"
        android:layout_marginTop="10dip"
        android:background="@drawable/background_tongji_main" >
        
        <TextView 
            android:id="@+id/textview2_main"
            android:layout_width="fill_parent"
            android:layout_height="38dip"
            android:gravity="center"
            android:text="今天共有2项日程,点击查看所有日程"
            android:textSize="14dp"/>
        
        <ImageView 
            android:id="@+id/imageview1_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/jiangetiao" />
        
        <TextView 
            android:id="@+id/textview3_main"
            android:layout_width="fill_parent"
            android:layout_height="38dip"
            android:gravity="center"
            android:text="\t\t近期计划：2   近期独立任务：2"
            android:textSize="14dp"/>
        
        <ImageView 
            android:id="@+id/imageview2_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/jiangetiao" />
        
        <TextView 
            android:id="@+id/textview4_main"
            android:layout_width="fill_parent"
            android:layout_height="38dip"
            android:gravity="center"
            android:text="\t已评估计划：2   已评估独立任务：2"
            android:textSize="14dp"/>
        
    </LinearLayout>
    
    <Button
        android:id="@+id/add_main"
        android:layout_below="@id/linearlayout2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/add_button_long_selector" />
    
    <TextView
        android:id="@+id/textView5_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/add_main"
        android:layout_marginTop="10dip"
        android:textColor="@android:color/white"
        android:textStyle="italic"
        android:textSize="16dip"
        android:text="今天的日程安排"
        />
    
    <ListView 
        android:id="@+id/listview_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5_main"
        android:layout_marginTop="10dip"
        android:divider="@drawable/jiangetiao_list" >
        
    </ListView>

</RelativeLayout>