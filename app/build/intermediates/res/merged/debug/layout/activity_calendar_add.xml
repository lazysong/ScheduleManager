<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context="${relativePackage}.${activityClass}" >


    <TextView
        android:id="@+id/textView1_add_calendar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/title_background"
        android:text="添加日程"
        android:textColor="@android:color/white"
        android:textSize="18dip" />
    

    
    <EditText
        android:id="@+id/editText1_add_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1_add_calendar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:hint="输入名称" 
        android:ems="10" >

        <requestFocus />
    </EditText>

    
     <Button
        android:id="@+id/button1_add_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText1_add_calendar"
        android:background="@drawable/datatime_button_selector"
        android:layout_alignLeft="@id/editText1_add_calendar"
        android:text="Button" />



     <Button
        android:id="@+id/button2_add_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText1_add_calendar"
        android:layout_toRightOf="@id/button1_add_calendar"
        android:background="@drawable/datatime_button_selector"
        android:layout_alignRight="@id/editText1_add_calendar"
        android:text="Button" />
    
   

     <EditText
        android:id="@+id/editText2_add_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button2_add_calendar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input"
        android:gravity="center"
        android:layout_marginTop="5dip"
        android:hint="输入地点" 
        android:ems="10" />
    


     <EditText
        android:id="@+id/editText3_add_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText2_add_calendar"
        android:layout_alignLeft="@+id/editText2_add_calendar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input"
        android:gravity="center"
        android:layout_marginTop="5dip"
        android:hint="描述信息" 
        android:ems="10" />
    
   
    
    <Spinner
        android:id="@+id/spinner1_add_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText3_add_calendar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/spinner_selector"
        android:gravity="center_horizontal"
        android:paddingLeft="80dip" />

    
    <Spinner
        android:id="@+id/spinner2_add_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner1_add_calendar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/spinner_selector"
        android:gravity="center_horizontal"
        android:paddingLeft="80dip" />

    
    
    <Button
        android:id="@+id/save_add_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dip"
        android:layout_below="@id/spinner2_add_calendar"
        android:background="@drawable/save_button_selector" />

    
    <Button
        android:id="@+id/cancle_add_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/save_add_calendar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:background="@drawable/cancle_button_selector" />

</RelativeLayout>