<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background5"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textView1_add_plan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/title_background"
        android:text="添加计划"
        android:textColor="@android:color/white"
        android:textSize="18dip" />
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >
        <EditText
        android:id="@+id/editText1_add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_centerHorizontal="true"
        android:background="@drawable/input"
        android:layout_marginTop="20dip"
        android:gravity="center_horizontal"
        android:ems="10"
        android:hint="输入名称"  >
        
        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editText2_add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText1_add_plan"
        android:layout_centerHorizontal="true"
        android:background="@drawable/input"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:hint="输入描述信息" 
        android:ems="10" />

    <Button
        android:id="@+id/button1_add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editText2_add_plan"
        android:background="@drawable/datatime_button_selector"
        android:text="Button" />
    
    <Button
        android:id="@+id/button2_add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editText2_add_plan"
        android:layout_toRightOf="@id/button1_add_plan"
        android:background="@drawable/datatime_button_selector"
        android:text="Button" />

    <Button
        android:id="@+id/button3_add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dp"
        android:layout_below="@id/button1_add_plan"
        android:background="@drawable/datatime_button_selector"
        android:text="Button" />

    <Button
        android:id="@+id/button4_add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="10dp"
        android:layout_below="@id/button2_add_plan"
        android:layout_toRightOf="@id/button3_add_plan"
        android:background="@drawable/datatime_button_selector"
        android:text="Button" />

    <Button
        android:id="@+id/button5_add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:layout_below="@+id/button3_add_plan"
        android:background="@drawable/save_button_selector" />

    <Button
        android:id="@+id/button6_add_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button5_add_plan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:background="@drawable/cancle_button_selector" />
    </RelativeLayout>

    

</RelativeLayout>